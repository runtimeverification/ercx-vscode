{
	"name": "ercx-vscode",
	"displayName": "ercx-vscode",
	"description": "Run the ERCx tests inside VSCode.",
	"version": "0.0.1",
	"publisher": "RuntimeVerification",
	"private": true,
	"license": "BSD-3",
	"repository": "https://github.com/runtimeverification/ercx-vscode",
	"icon": "media/ERC-X-symbol-transparent-square-100x100-01.png",
	"enabledApiProposals": [
		"testCoverage",
		"testContinuousRun"
	],
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:*.sol"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "ERCx configuration",
			"properties": {
				"ercx.ercxAPIUri": {
					"type": "string",
					"default": "https://pr-384.ercx-sandbox.runtimeverification.com/api/v1/",
					"description": "URL to the ERCx api."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./",
		"download-api": "vscode-dts main && vscode-dts dev",
		"postinstall": "npm run download-api"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^16.11.7",
		"@types/yaml": "^1.9.7",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"typescript": "^5.0.2",
		"vscode-dts": "^0.3.3"
	},
	"dependencies": {
		"cross-fetch": "^4.0.0"
	}
}
