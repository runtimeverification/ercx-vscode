{
	"name": "ercx-vscode",
	"displayName": "ERCx VSCode",
	"description": "Run the ERCx tests inside VSCode.",
	"version": "0.0.2",
	"publisher": "RuntimeVerification",
	"private": true,
	"license": "BSD-3",
	"repository": "https://github.com/runtimeverification/ercx-vscode",
	"icon": "media/ERC-X-symbol-transparent-square-100x100-01.png",
	"author": {
		"name": "Runtime Verification",
		"email": "radu.mereuta@runtimeverification.com",
		"url": "https://github.com/radumereuta"
	},
	"engines": {
		"vscode": "^1.71.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:solidity"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "ERCx configuration",
			"properties": {
				"ercx.ercxAPIUri": {
					"type": "string",
					"default": "https://ercx-sandbox.runtimeverification.com/api/v1/",
					"description": "URL to the ERCx api."
				}
			}
		},
		"commands": [
			{
				"command": "ercx.generateTests20",
				"title": "Generate ERC20 tests",
				"category": "ERCx",
				"when": "editorLangId == solidity"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorLangId == solidity",
					"command": "ercx.generateTests20"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./",
		"download-api": "vscode-dts main && vscode-dts dev",
		"postinstall": "npm run download-api"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^16.18.43",
		"@types/yaml": "^1.9.7",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.47.0",
		"typescript": "^5.1.6",
		"vscode-dts": "^0.3.3"
	},
	"dependencies": {
		"cross-fetch": "^4.0.0",
		"solc": "^0.8.21"
	}
}
